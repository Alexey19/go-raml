{{- define "server_main_nim" -}}
import jester, asyncdispatch, json, marshal
{{ range $k, $v := .Imports }}
import {{$v}}{{end}}

routes:
{{- range $k, $v := .Resources }}
{{- range $km, $vm := $v.Methods}}
  {{$vm.Verb}} "{{$vm.JesterEndpoint}}":
    let ret = {{$vm.MethodName}}({{$vm.CallParams}})
    resp(ret.code, $$ret.content)
{{end }}
{{- end }}

runForever()
{{ end }}
